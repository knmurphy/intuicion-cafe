---
layout: layouts/base.njk
section: tostados
---

<article class="max-w-4xl mx-auto my-6 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold leading-tight">{{ title }}</h1>
  <p class="mt-2 text-sm text-gray-600">
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/" class="text-blue-500 hover:text-blue-600">{{ author }}</a>
    </small>
  </p>

  <div class="mt-4">
    {{ layoutContent | safe }}
  </div>

  <div class="mt-6 p-4 bg-gray-50 rounded">
    <!-- Coffee Details -->
    <dl class="grid grid-cols-2 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Producer Photo -->
  <div class="flex justify-center col-span-2 lg:col-span-1 lg:justify-start">
    <div class="mt-4 bg-white p-1 border border-gray-300 shadow-lg">
      <img src="{{ cafe.producerPhoto | url }}" alt="Producer's Name" class="w-48 h-48 object-cover"/>
      <div class="pt-2 pb-4 px-2 text-center">
        <span class="block font-semibold">Producer's Name</span>
        <span class="block text-xs text-gray-500">Finca Name, Country</span>
      </div>
    </div>
  </div>
      <div class="coffee-detail">
        <dt class="font-semibold">Origin</dt>
        <dd>{{ cafe.origin }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Region</dt>
        <dd>{{ cafe.region }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Finca</dt>
        <dd>{{ cafe.finca }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Grower</dt>
        <dd>{{ cafe.grower }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Tostador</dt>
        <dd>{{ cafe.tostador }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Altitude</dt>
        <dd>{{ cafe.altitude }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Varietal</dt>
        <dd>{{ cafe.varietal }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Bean</dt>
        <dd>{{ cafe.bean }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Process</dt>
        <dd>{{ cafe.process }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Roast</dt>
        <dd>{{ cafe.roast }}</dd>
      </div>
      <div>
      <dt class="font-semibold">Roast Date</dt>
      <dd><time datetime="{{ cafe.roastDate | machineDate }}">{{ cafe.roastDate | readableDate }}</time></dd>
      </div>
      <div>
        <dt class="font-semibold">Developed</dt>
        <dd>{{ cafe.developed }}</dd>
      </div>
      <div>
        <dt class="font-semibold">Notes</dt>
        <dd>{{ cafe.notes }}</dd>
      </div>
    </dl>
     <!-- QR Code -->
    <div class="mt-6 flex flex-col items-center">
      <div class="mb-4 h-32 w-32 flex items-center justify-center border-2 border-dashed border-gray-400 rounded">QR Code</div>
    </div>

  {% if tags %}
    <p class="mt-4">
    {% for tag in tags %}
      {%- if tag != "Café Tostado" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav class="my-6">
  <a href="{{ '/cafe-tostado/' | url }}" class="text-blue-500 hover:text-blue-600">← Café index</a>
</nav>
